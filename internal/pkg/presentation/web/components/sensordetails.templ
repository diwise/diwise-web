				<div class="flex gap-4 text-secondary-dark dark:text-secondary border-b border-gray-30 dark:border-white-30 w-full">
					<div class="flex gap-4">
						<button
							class={ "flex flex-col items-center px-4 py-2", 
					templ.KV("border-b-4 border-primary-dark dark:border-white active-tab", true),
					templ.KV("hover:border-b-4 hover:border-gray-200 dark:hover:border-white-30", false) }
