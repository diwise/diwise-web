						@Map(newMapData(sensor.Latitude, sensor.Longitude), sensorMapFeature(sensor))
					</div>
				</div>
			</div>
		</div>
	</div>
}

templ EditSensorDetails(l10n locale.Localizer, asset assets.AssetLoaderFunc, sensor SensorDetailsViewModel) {
