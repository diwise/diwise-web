									hx-get={ fmt.Sprintf("/components/sensors/charts/%s", sensor.DeviceID) }
									hx-target="#measurement-chart-data"
									hx-params="timeAt, endTimeAt"
									class="border border-input-surface rounded-xl py-2 px-3 dark:text-secondary-dark"
