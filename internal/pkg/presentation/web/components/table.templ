func progressBar(data string) templ.Component {
	value, _ := strconv.Atoi(data)

	colourClass := ""
	switch {
	case value >= 70:
		colourClass = "bg-red-600"
	case value <= 40:
		colourClass = "bg-green-700"
	default:
		colourClass = "bg-orange-600"
	}

	return templ.ComponentFunc(func(ctx context.Context, w io.Writer) error {
		_, err := io.WriteString(w, fmt.Sprintf(
			`<div>
                %s%%
            </div>
            <div class="bg-background-200 w-full rounded-lg">
                <div class="%s rounded-lg" style="width: %s%%; height: 6px"></div>
            </div>`, data, colourClass, data,
		))
		return err
	})
}

