func getPageUrl(ctx context.Context, tableName string) templ.SafeURL {
	next := nextPage(ctx)
	limit := ctx2str(ctx, PageSize)
	u := fmt.Sprintf("/components/tables/%s?page=%d&limit=%s", tableName, next, limit)
	return templ.URL(u)
}

